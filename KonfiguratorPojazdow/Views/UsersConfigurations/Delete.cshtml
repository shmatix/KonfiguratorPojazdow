@model KonfiguratorPojazdow.Data.Configuration

@{
    ViewData["Title"] = "Usuń";
}

<h1>Usuń</h1>

<h3>A czy na pewno chcesz usunąć?</h3>
<div>
    <h4>Konfiguracja</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Interior)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Interior)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Rims)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rims)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Car)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Car.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Engine)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Engine.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Paint)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Paint.Id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-primary">Powrót do konfiguracji</a>
    </form>
</div>
